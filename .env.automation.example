# ==========================================
# ResLibs 百度网盘自动化脚本环境配置示例
# 复制此文件为 .env.automation 并填入真实值
# ==========================================

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/reslibs"

# AI 内容生成配置
GEMINI_API_KEY="AIzaSy...your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-flash"

# 百度网盘配置
BAIDU_PAN_PATH="/share/游戏工具/Unity3D资源包"
BAIDU_ACCESS_TOKEN="your-baidu-access-token"
BAIDU_REFRESH_TOKEN="your-baidu-refresh-token"
BAIDU_APP_ID="your-baidu-app-id"
BAIDU_APP_SECRET="your-baidu-app-secret"
BAIDU_OPEN_API_KEY="your-baidu-open-api-key"
BAIDU_OPEN_SECRET_KEY="your-baidu-open-secret-key"

# 下载配置
DOWNLOAD_DIR="./temp/downloads"
MAX_FILE_SIZE="5GB"
CONCURRENT_DOWNLOADS="3"
RETRY_ATTEMPTS="3"
RETRY_DELAY="5"

# 图片搜索和下载配置
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
PEXELS_API_KEY="your-pexels-api-key"
PIXABAY_API_KEY="your-pixabay-api-key"
IMAGE_DOWNLOAD_DIR="./temp/images"
MAX_IMAGE_SIZE="5MB"
IMAGES_PER_RESOURCE="5"

# Cloudflare R2 图床配置
CLOUDFLARE_ACCOUNT_ID="1234567890abcdef1234567890abcdef"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="reslibs-images"
CLOUDFLARE_R2_ENDPOINT="https://1234567890abcdef1234567890abcdef.r2.cloudflarestorage.com"
CLOUDFLARE_R2_CUSTOM_DOMAIN="https://images.reslibs.com"

# 付费下载平台配置
RAPIDGATOR_API_KEY="your-rapidgator-api-key"
RAPIDGATOR_USERNAME="your-rapidgator-username"
RAPIDGATOR_PASSWORD="your-rapidgator-password"

TURBOBIT_API_KEY="your-turbobit-api-key"
TURBOBIT_USERNAME="your-turbobit-username"
TURBOBIT_PASSWORD="your-turbobit-password"

FILECAT_API_KEY="your-filecat-api-key"
FILECAT_USERNAME="your-filecat-username"
FILECAT_PASSWORD="your-filecat-password"

# 上传配置
UPLOAD_CHUNK_SIZE="10485760"
UPLOAD_TIMEOUT="3600"
UPLOAD_CONCURRENT="2"

# 日志配置
LOG_LEVEL="INFO"
LOG_FILE="./logs/automation.log"
LOG_MAX_SIZE="10MB"
LOG_BACKUP_COUNT="5"

# 代理配置（可选）
HTTP_PROXY=""
HTTPS_PROXY=""
SOCKS_PROXY=""

# 通知配置
WEBHOOK_URL=""
EMAIL_NOTIFICATIONS="false"
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""
ADMIN_EMAIL="admin@reslibs.com"

# 调试配置
DEBUG_MODE="false"
DRY_RUN="false"
PAUSE_BETWEEN_STEPS="3"

# 文件处理配置
SUPPORTED_EXTENSIONS=".zip,.rar,.7z,.tar,.gz,.unitypackage,.exe,.msi,.dmg,.pkg,.psd,.ai,.sketch,.png,.jpg,.jpeg,.gif,.bmp,.tiff,.mp4,.avi,.mov,.wmv,.flv,.mkv,.mp3,.wav,.flac,.aac,.pdf,.epub,.mobi,.azw,.azw3"

# 内容生成配置
CONTENT_LANGUAGE="zh-CN"
GENERATE_THUMBNAILS="true"
EXTRACT_ARCHIVE_PREVIEW="true"
AUTO_CATEGORIZE="true"

# 性能配置
MAX_CONCURRENT_RESOURCES="2"
PROCESSING_TIMEOUT="7200"
MEMORY_LIMIT="4GB"
DISK_SPACE_THRESHOLD="10GB"